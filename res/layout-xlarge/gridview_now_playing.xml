<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
			 
	<Button android:id="@+id/playingbutton" android:layout_width="fill_parent" android:layout_height="wrap_content" 
    		android:layout_alignParentBottom="true" android:text="@string/play_list"/>
			
	<GridView xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:id="@+id/grid_view"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:columnWidth="500dp"
	    android:numColumns="2"
	    android:verticalSpacing="1dp"
	    android:horizontalSpacing="1dp"
	    android:layout_marginTop="4dp"
		android:layout_marginRight="7dp"
		android:layout_marginLeft="7dp"
		android:stretchMode="columnWidth"
		android:overScrollMode="never"
	    android:gravity="center"
	    android:layout_above="@id/playingbutton"/>
	            
 </RelativeLayout>